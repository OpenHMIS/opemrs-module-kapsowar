	<!-- Required Privileges -->
	<!--App Privileges for openmrs 2.0x-->
	<privilege>
		<name>App: Access Kapsowar Specific Functionality</name>
		<description>Able to access Kapsowar specific functionality in openmrs 2.x</description>
	</privilege>
	<privilege>
		<name>App: Print Patient Details</name>
		<description>Print patient deatils from the 2.X UI</description>
	</privilege>
	<privilege>
		<name>App: Edit Visit</name>
		<description>Able to access old patient search page to edit visit</description>
	</privilege>
	<privilege>
		<name>Task: View Kapsowar Reports</name>
		<description>View kapsowar specific reports</description>
	</privilege>

